<!--mypages/list/list.wxml-->
<view class="container">
  <block wx:for="{{arrList}}" wx:key="{{index}}" wx:for-item="item">
    <view class="item">
      <text>{{item}}</text>
    </view>
  </block>
  <block wx:if="{{arrList.length==0}}">
    <view class="item">
      <text >下拉加载数据</text>
    </view>
  </block>
</view>
